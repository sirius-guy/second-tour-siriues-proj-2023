@model ListsViewModel

<div class="container is-fluid">
    <h2 class="subtitle">Списки продуктов</h2>

    <form method="post" action="/shoppingLists/add">
        <input placeholder="Имя списка" name="text" type="text" class="input"/>
        <br/>
        <br/>
        <input type="submit" class="button is-info" value="Добавить список"/>
    </form>

    <br/>

    @foreach (var list in Model.Lists)
    {
        <div class="card">
            <div class="card-header">
                <p class="card-header-title">@list.Text</p>
            </div>
            <div class="card-content">
                <p>
                    <ul class="list">
                        <li>- Запланировано: @list.Scheduled</li>
                        <li>- В корзине: @list.InCart</li>
                        <li>- Куплено: @list.Bought</li>
                    </ul>

                    <br/>
                    <a href="/shoppingLists/delete/@list.Id" class="button is-danger">Удалить</a>
                    <br/>
                    <br/>
                    <a href="/lists/@list.Id" class="button">Перейти →</a>
                </p>
            </div>
        </div>

        <br/>
    }
</div>